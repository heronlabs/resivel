<style type="text/css">
*{
  text-decoration: none;
  font-family: 'Poppins', sans-serif;
}
body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.main{
  width: 21cm;
  min-height: 29.7cm;
  position: relative;
}
.section1{
  width: 40%;
  height: 3381px;
  background-color: #2397ee;
  position: absolute;
  display: inline;
}
.section1 .img{
  width: 100%;
  height: 100%;
  padding: 20px 20px 0px;
  position: relative;
  top: 20px;
  left: 35px;
}
.section1 .img img{
  width: 210px;
  height: 210px;
  background-color: #ffffff;
  clip-path: polygon(25% 5%, 75% 5%, 100% 50%, 75% 95%, 25% 95%, 0% 50%);
}
.section1 .sect1-cont{
  position: absolute;
  top: 260px;
  width: 100%;
}
.section1 .sect1-cont ul{
  position: relative;
  line-height: 20px;
}
.section1 .sect1-cont h2{
  display: block;
  color: #fff;
  font-size: 22px;
  font-weight: bold;
  text-transform: uppercase;
  padding: 0px 0px 10px 10px;
  position: relative;
}
.section1 .sect1-cont h2:after{
  content: " ";
  position: absolute;
  top: 30px;
  margin-left: 2px;
  display: block;
  width: 100px;
  border-bottom: 5px solid #F2F4F4;
}
.education {
  padding-top: 30px;
}
.edu_cont{
  padding-left: 22px;
  border-bottom: 4px solid #F2F4F4;
}
.edu_cont span{
  color: #2397ee;
  background: #f1f1f1;
  height: 25px;
  padding: 5px 20px;
}
.edu_cont p{
  font-weight: bold;
  font-size: 15px;
  color: #f1f1f1;
}
.edu_cont h3{
  color: #fff;
  font-size: 15px;
}
.skil-header{
  position: relative;
  padding: 0;
}
.skil-header h1{
  color: #fff;
  text-transform: uppercase;
}
.skil-header h1:after{
  content: " ";
  position: absolute;
  top:125px;
  margin-left: 2px;
  display: block;
  width: 100px;
  border-bottom: 5px solid #F2F4F4;
}
.skill_cont{
  margin-top: -20px;
  padding: 0px 0 0px 20px;
}
.skill_cont p {
  margin: 5px 0 0 2px;
  font-size: 13px;
  color: #fff;
  padding-top: 12px;
}
.skill_cont span{
    font-size: 11px;
    font-weight: bold;
    position: relative;
    display: block;
    top: -3px;
    float: right;
}
.skill_container {
  background-color: rgb(192, 192, 192);
  width: 90%;
  height: 10px;
  border-radius: 15px;
}
.skill {
  background-color: #fff;
  color: #2397ee;
  padding-right: 5px;
  text-align: right;
  font-size: 10px;
  height: 10px;
  border-radius: 15px;
}
{{#each knowledge.skillsPercentage}}
.{{this.id}} {
  width: {{this.levelPercentage}}%;
}
{{/each}}

{{#each communication.languages}}
.{{this.readingPercentageId}} {
  width: {{this.readingPercentage}}%;
}
.{{this.conversationPercentageId}} {
  width: {{this.conversationPercentage}}%;
}
.{{this.writtingPercentageId}} {
  width: {{this.writtingPercentage}}%;
}
{{/each}}
.section1 .sect1-cont ul li{
  list-style: none;
  text-decoration: none;
  line-height: 15px;
}
.skill3{
  width: 50%;
}
.skill4{
  width: 90%;
}
.skill5{
  width: 70%;
}
.contact p{
  color: #ffffff;
  font-weight: 500;
  font-size: 16px;
  display: inline-block;
  padding-left: 10px;
  line-height: 20px;
}
.small-icon{
  width: 30px !important;
  height: 30px !important;
  margin-top: -5px;
  vertical-align: middle;
}
.contact img{
  width: 20px;
  height: 20px;
  color: #fff;
  margin-left: -15px;
}
.section2{
  display: inline;
  width: 90%;
  height: 100% auto;
  background-color:#f1f1f1;
  position: absolute;
  top: 0;
  left: 40%;
}
.section2 .heading {
  position: relative;
  padding: 5px 0px 0px;
}
.section2 .mainhead{
  width: 100% auto;
}
.section2 h2{
  margin-left: 10px;
  color: #2397ee;
  text-transform: uppercase;
  padding: 0;
  margin-top: 0;
}
.section2 h2:after{
  content: " ";
  position: absolute;
  top: 40px;
  margin-left: 2px;
  display: block;
  width: 80px;
  border-bottom: 5px solid #2397ee;
}
.section2 .heading h1{
  color: #2397ee;
  font-size: 45px;
  font-weight: bold;
  text-transform: uppercase;
  display: block;
  text-align: center;
  padding: 10px 0 0px;
  position: relative;
}
.section2 .heading h1:after{
  content: " ";
  position: absolute;
  top: 75px;
  left: 0;
  right: 0;
  display: block;
  width: 100px;
  border-bottom: 3px solid #2397ee;
  padding: 0;
  margin: 0 auto;
}
.section2 .heading h4{
  color: #000;
  font-size: 20px;
  font-weight: 500;
  text-transform: capitalize;
  text-align: center;
  padding: 0;
  margin-top: -20px;
}
.section2 p{
  padding-top: 0;
  font-weight: 500;
  width: 94%;
  padding-left: 20px;
  text-align: justify;
}
.exp{
  position: relative;
  top: 0;
}
.exp-cont{
  position: relative;
  width: 100%;
}
.exp-detail {
  padding: 0 0 0 20px;
  margin-top: 0px;
  width: 94%;
}
.exp-detail b{
  margin-top: 0;
  margin-left: 40px;
}
.exp-detail ul{
  width: 80%;
}
.exp-detail h3{
  padding: 0px;
  font-size: 20px;
  font-weight: bold;
}
.exp-detail h6{
  color: #2397ee;
  font-size: 15px;
  margin-top: -20px;
  padding-bottom: 0;
}
.exp-detail p{
  padding: 0%;
  width: 90%;
  margin-top: -30px;
}
.exp-year {
  background: #2397ee;
  float: right;
  height: 25px;
  padding: 5px 20px;
  margin-right: 50px;
}
.exp-year span{
  color: #fff;
  text-align: center;
  font-weight: bold;
}
.ref_cont{
  width: 40%;
  display: inline-block;
  padding-left: 20px;
  padding-top: 0;
  text-align: left;
  padding-bottom: 10px;
}
.ref_cont h4{
  margin-top: 2px;
  font-size: 14px;
  color: #2397ee;
}
.ref_cont span{
  padding: 0;
  margin-top: -15px !important;
  display: block;
}
.ref_cont p{
  display: block;
  margin: 2px 0 0 -3px;
  padding: 0;
  color: #2397ee;
}
</style>